# Ignore all Python virtual environments
.venv/

# Ignore log files generated by Airflow
logs/

# Ignore all generated data files and reports
# The asterisk (*) is a wildcard that means "anything"
data/decompressed/
data/qc_reports/
data/alignments/

# Ignore the BWA index files, but NOT the reference.fa itself
data/reference/*.amb
data/reference/*.ann
data/reference/*.bwt
data/reference/*.pac
data/reference/*.sa

# Ignore common Python cache files
__pycache__/
*.pyc

# Ignore VS Code settings specific to a user
.vscode/
